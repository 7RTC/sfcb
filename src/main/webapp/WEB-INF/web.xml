<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Foto</servlet-name>
        <servlet-class>br.com.javamagazine.sfcb.servlets.FotoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageProxy</servlet-name>
        <servlet-class>br.com.javamagazine.sfcb.servlets.ImageProxy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostServlet</servlet-name>
        <servlet-class>br.com.javamagazine.sfcb.servlets.PostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.com.javamagazine.sfcb.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>Colagem</servlet-name>
		<jsp-file>/colagem.jsp</jsp-file>
    </servlet>
    
    
    <servlet-mapping>
        <servlet-name>Foto</servlet-name>
        <url-pattern>/Fotos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageProxy</servlet-name>
        <url-pattern>/Fotos/ImageProxy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/PostColagem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Colagem</servlet-name>
        <url-pattern>/Colagem</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
